{V "system","header"}
<body class="body pxgridsbody">
<section class="wrapper">
<div class="row">
<div class="col-lg-12">
<section class="panel">
    {InitPHP::getService("admin")->menu($_GET['_menuid'])}
    <table class="table table-striped table-advance table-hover">
        <thead>
        <tr>
            <th class="hidden-phone tablehead">修改角色</th>
        </tr>
        </thead>
    </table>
    <div class="panel-body">
        <form class="form-horizontal tasi-form" method="post" action="">
            <input type="hidden" name="role" value="{$role}">
            <div class="form-group">
                <label class="col-sm-2 control-label">角色名称</label>
                <div class="col-sm-4 input-group">
                    <input type="text" class="form-control" name="form[name]" value="{$r['name']}" color="#000000" datatype="s2-30" errormsg="别名至少2个字符,最多30个字符！">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">角色描述</label>
                <div class="col-sm-4 input-group">
                    <textarea name="form[remark]" class="form-control" cols="60" rows="3">{$r['remark']}</textarea>                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10 input-group">
                    <input class="btn btn-info" type="submit" name="dosubmit" value="提交">
                </div>
            </div>
        </form>
    </div>
</section>
</div>
</div>
<!-- page end-->
</section>
<script src="/resource/js/bootstrap.min.js"></script>
<script src="/resource/js/jquery.nicescroll.js" type="text/javascript"></script>
<script src="/resource/js/pxgrids-scripts.js"></script>
<script type="text/javascript">
    $(function(){
        $(".form-horizontal").Validform({
            tiptype:3
        });
    })
</script>

